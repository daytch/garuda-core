---
import { Image } from "astro:assets";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";

import myImage from "../../assets/images/dev-with-c-1.webp";
import GradiantText from "../shared/GradiantText.astro";

type FeatureProps = {
  title: string;
  description: string;
};
const features = [
  {
    title: "Arsitektur Sistem yang Scalable",
    description:
      "Didesain agar aplikasi tetap stabil dan cepat meskipun jumlah pengguna dan data terus bertambah. Cocok untuk bisnis yang ingin tumbuh tanpa batasan teknis.",
  },
  {
    title: "Pengembangan Berbasis Komponen (Modular)",
    description:
      "Setiap fitur dibangun secara terpisah dan fleksibel, sehingga mudah diperbarui, diperluas, atau diganti tanpa mengganggu sistem utama.",
  },
  {
    title: "Integrasi API & Middleware Kustom",
    description:
      "Sambungkan aplikasi dengan layanan eksternal seperti sistem pembayaran, CRM, atau platform lain melalui API yang aman dan mudah diatur.",
  },
  {
    title: "Dashboard & Analitik Bisnis Real-Time",
    description:
      "Pantau performa bisnis, data penjualan, hingga aktivitas pengguna secara langsung dalam satu tampilan yang informatif dan interaktif.",
  },
  {
    title: "CI/CD Otomatis & Deployment Cloud",
    description:
      "Proses pengembangan lebih cepat dan aman dengan sistem build otomatis, testing berkelanjutan, dan deployment langsung ke cloud tanpa downtime.",
  },
  {
    title: "Desain UI/UX Modern dan Responsif",
    description:
      "Tampilan yang clean, mudah digunakan, dan beradaptasi di semua perangkat — dari desktop hingga smartphone.",
  },
  {
    title: "Keamanan Data Berlapis",
    description:
      "Dilengkapi enkripsi, autentikasi, dan proteksi multi-level untuk menjaga data bisnis dan pengguna dari ancaman siber.",
  },
  {
    title: "Testing & Quality Assurance Mendalam",
    description:
      "Setiap modul diuji secara menyeluruh untuk memastikan performa, stabilitas, dan keandalan sebelum dirilis ke pengguna.",
  },
  {
    title: "Dokumentasi Teknis yang Jelas",
    description:
      "Dokumentasi lengkap dan mudah dipahami untuk mempermudah tim internal maupun klien melakukan integrasi dan pengembangan lanjutan.",
  },
  {
    title: "Dukungan Pasca-Proyek & Maintenance",
    description:
      "Tim kami tetap siap membantu setelah proyek selesai — mulai dari bug fix, update fitur, hingga pengawasan performa sistem.",
  },
  {
    title: "Optimasi Performa Aplikasi",
    description:
      "Analisis dan tuning sistem dilakukan secara rutin agar aplikasi tetap cepat, efisien, dan hemat sumber daya.",
  },
  {
    title: "Audit & Refactor Kode Lama",
    description:
      "Perbarui dan rapikan kode lama agar lebih efisien, aman, serta sesuai dengan standar teknologi terbaru.",
  },
];

export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section id="features" class=`${className}`>
  <Container className="">
    <div class="text-center max-w-3xl mx-auto">
      <Title>
        Kami bangun <GradiantText>Solusi <br />Digital</GradiantText> dari Awal hingga Akhir
      </Title>
    </div>
    <div class="flex flex-row flex-wrap mt-8">
      <!-- <div class="flex flex-col lg:gap-10 lg:gap-12 midmd:flex-row mt-8"> -->
      <!-- <div class="flex  lg:w-1/2 flex-row"> -->
      {
        features.map((feature: FeatureProps) => {
          return (
            <div class="flex items-center text-heading-3 font-medium basis-full md:basis-1/2 lg:basis-1/3">
              <span class="font-bold rounded-full w-8 h-8 mr-3 text-primary inline-flex justify-center items-center">
                &checkmark;
              </span>
              {feature.title}
            </div>
          );
        })
      }
      <!-- </div> -->
    </div>
  </Container>
</section>
